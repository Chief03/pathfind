{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "amplify/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "amplify/**/*.js",
    "amplify/**/*.d.ts"
  ]
}
